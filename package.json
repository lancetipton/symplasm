{
  "name": "symplasm",
  "description": "HTML to JSON parser",
  "version": "3.0.1",
  "author": "Lance Tipton <ltipton@tiptondigital.com>",
  "bugs": {
    "url": "https://github.com/lancetipton/symplasm/issues"
  },
  "homepage": "https://github.com/lancetipton/symplasm",
  "keywords": [
    "ast",
    "html",
    "json",
    "parser"
  ],
  "license": "ISC",
  "main": "index.cjs",
  "module": "index.js",
  "types": "build/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/lancetipton/symplasm.git"
  },
  "files": [
    "build",
    "index.js",
    "index.cjs",
    "README.md"
  ],
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    "prebuild": "yarn format && yarn test",
    "build": "yarn build:es && yarn build:copy && yarn build:cli",
    "build:es": "node --enable-source-maps -r esbuild-register configs/build.config.ts",
    "build:copy": "rimraf docs/symplasm && cp -R build/cjs docs/symplasm",
    "clean": "yarn clean:lock && yarn cache clean && rimraf node_modules && npm cache clean --force",
    "clean:cache": "yarn cache clean",
    "clean:lock": "rimraf ./yarn.lock && rimraf ./package.lock",
    "docs:deploy": "yarn build && gh-pages -d docs",
    "docs:serve": "cd ./docs && serve .",
    "docs": "yarn docs:serve",
    "json:reset": "git checkout ./package.json",
    "json:rm": "yarn json:rm:dev && yarn json:rm:deps && yarn json:rm:bin",
    "json:rm:bin": "dot-json package.json bin -d",
    "json:rm:dev": "dot-json package.json devDependencies -d",
    "json:rm:deps": "dot-json package.json dependencies -d",
    "format:eslint": "eslint --config ./configs/eslintrc.config.js . --fix --quiet",
    "format:prettier": "prettier --config ./configs/prettier.config.js --ignore-path .eslintignore --write '**/*.{js,jsx}'",
    "format": "yarn format:prettier && yarn format:eslint",
    "prepack": "yarn json:rm",
    "postpublish": "yarn json:reset",
    "test": "NODE_ENV=test jest --detectOpenHandles --no-cache --verbose --config=./configs/jest.config.js --maxWorkers=50%",
    "test:cov": "yarn test:reports",
    "test:reports": "yarn test --coverage && yarn view:reports",
    "view:reports": "open reports/coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@keg-hub/args-parse": "10.0.0",
    "@keg-hub/cli-utils": "0.8.0-alpha1",
    "esbuild": "0.17.18",
    "esbuild-register": "3.4.2"
  },
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "0.2.2",
    "@jgoz/esbuild-plugin-typecheck": "3.0.2",
    "@keg-hub/jsutils": "9.6.1",
    "@types/jest": "29.5.1",
    "@types/node": "18.15.13",
    "@typescript-eslint/parser": "5.59.0",
    "dot-json": "1.2.2",
    "es-jest": "2.1.0",
    "esbuild-plugin-d.ts": "1.1.0",
    "esbuild-plugin-path-alias": "1.0.7",
    "get-all-files": "4.1.0",
    "gh-pages": "5.0.0",
    "jest": "29.5.0",
    "jest-cli": "29.5.0",
    "json": "11.0.0",
    "prettier": "2.8.7",
    "rimraf": "5.0.0",
    "serve": "14.2.0",
    "typescript": "^5.0.4"
  }
}
